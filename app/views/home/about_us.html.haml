#content
  #page-header
    .row
      .span12
        %h2 About us
  .row
    .span12
      %h3.headline
        %span Who We Are
  .row
    .span8
      = @about_us.content.html_safe
    .span4
      = image_tag "300x140.png", class: "responsive-img"
  %br/
  %br/
  .row
    .span12
      %h3.headline
        %span Meet the Team
  .row
    - @team.each do |member|
      .span4
        .team-member
          = link_to about_me_path(id: member.id) do
            = image_tag member.avatar.url.gsub("//s3.", "https://s3-us-west-2."), size: "300x350"
          %br.clear/
          %h3
            = member.name
          %p
            = member.designation
          %p
            = member.short_description.html_safe
          .social-media
            %a.facebook-icon.social-icon{:href => "#"}
              %i.fa.fa-facebook
            %a.twitter-icon.social-icon{:href => "#"}
              %i.fa.fa-twitter
            %a.googleplus-icon.social-icon{:href => "#"}
              %i.fa.fa-google-plus
            %a.pinterest-icon.social-icon{:href => "#"}
              %i.fa.fa-pinterest
  - if @testimonials.present?
    %br/
    .box-3{:style => "margin-bottom:-50px;"}
      .row
        .span12
          #testimonial-slider
            %ul.slides
              - @testimonials.each do |testimonial|
                %li
                  .testimonial-2
                    = image_tag testimonial.avatar.url(:thumb).gsub("//s3.", "https://s3-us-west-2.")
                    %blockquote
                      %p
                        = testimonial.message
                    %h5.text-right
                      %strong= testimonial.sender